@model Lab6.Models.DataAccess.AcademicRecord
        
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AcademicRecord</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseCode" />
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="CourseCodeNavigation.Code" />
            <input type="hidden" asp-for="CourseCodeNavigation.Title" />
            <input type="hidden" asp-for="Student.Id" />
            <input type="hidden" asp-for="Student.Name" />
            
            <div class="form-group">
                
                <label class="control-label dark-label col-lg-10">Student: @Model.StudentId - @Model.Student.Name</label>
                
            </div>
            <div class="form-group">
                
                <label class="control-label dark-label col-lg-10">Course: @Model.CourseCode - @Model.CourseCodeNavigation.Title</label>
                
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-controller="AcademicRecords" asp-action="Edit" asp-route-id="@Model.StudentId"  asp-route-code="@Model.CourseCode" asp-route-grade="@Model.Grade" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
