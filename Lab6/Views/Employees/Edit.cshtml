@model Lab6.Models.ViewModel.EmployeeRoleSelections

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee ID - @Model.employee.Id</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="employee.Id" />
            <div class="form-group">
                <label asp-for="employee.Name" class="control-label">Employee Name</label>
                <input asp-for="employee.Name" class="form-control" />
                <span asp-validation-for="employee.Name" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="employee.UserName" class="control-label">Network ID</label>
                <input asp-for="employee.UserName" class="form-control" />
                <span asp-validation-for="employee.UserName" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="employee.Password" class="control-label"></label>
                <input asp-for="employee.Password" class="form-control" />
                <span asp-validation-for="employee.Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Job Title</label><br>
                @for(int i = 0; i < Model.roleSelections.Count; i++)
                {
                    <label asp-for="@Model.roleSelections[i].Selected" class="control-label"> @Model.roleSelections[i].role.Role1 </label>
                    <input type="checkbox" asp-for="@Model.roleSelections[i].Selected"   value="@Model.roleSelections[i].Selected"/> <span>&nbsp;</span>
                    <input type="hidden" asp-for="@Model.roleSelections[i].role.Id"  />
                    <input type="hidden" asp-for="@Model.roleSelections[i].role.Role1" />                   
                }
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
